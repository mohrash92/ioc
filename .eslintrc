{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 2]
    },
    "overrides": [
        {
         "files": ["*container.js"],
            "rules": {
               "new-cap": "off",
               "class-methods-use-this": "off"
            }
        }
    ]
}
